<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <payment>
            <verosa_pay>
                <active>0</active>
                <model>Verosa\Pay\Model\Payment</model>
                <title>Credit Card (Verosa)</title>
                <auth_key backend_model="Magento\Config\Model\Config\Backend\Encrypted" />
                <order_status>processing</order_status>
                <payment_action>authorize</payment_action>
                <cctypes>AE,VI,MC,DI,JCB</cctypes>
                <usecvv>1</usecvv>
                <allowspecific>0</allowspecific>
                <min_order_total>0.50</min_order_total>
                <use_proxy>0</use_proxy>
                <bypassssl>0</bypassssl>
                <testing>0</testing>
                <debug>0</debug>
           </verosa_pay>
        </payment>
    </default>
</config>
